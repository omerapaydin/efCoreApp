@model Ogretmen
<h2>Ogretmen Ekle</h2>
<hr />
<form asp-controller="Ogretmen" asp-action="Create" method="post">
  <div class="mb-3">
    <label asp-for="Ad" class="form-label">Ogretmen Adı</label>
    <input asp-for="Ad" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="Soyad" class="form-label">Ogretmen Soyadı</label>
    <input asp-for="Soyad" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="Eposta" class="form-label">E-posta</label>
    <input asp-for="Eposta" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="Telefon" class="form-label">Telefon</label>
    <input asp-for="Telefon" class="form-control" />
  </div>
  <div class="mb-3">
    <label asp-for="BaslamaTarih" class="form-label">Baslama Tarihi</label>
    <input asp-for="BaslamaTarih" class="form-control" />
  </div>

  <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>
