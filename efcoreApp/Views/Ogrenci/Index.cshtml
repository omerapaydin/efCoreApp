@model IEnumerable<Ogrenci>
  <h2>Öğrenci Listesi</h2>
  <hr />
  <a asp-controller="Ogrenci" asp-action="Create" class="my-2 btn btn-primary"
    >Öğrenci Ekle</a>

  <table class="table table-bordered">
    <thead>
      <tr>
        <th style="width: 150px">@Html.DisplayNameFor(m => m.OgrenciId)</th>
        <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
        <th>@Html.DisplayNameFor(m => m.OgrenciSoyad)</th>
        <th style="width: 150px"></th>
      </tr>
    </thead>
    <tbody>
      @foreach(var ogr in Model) {
      <tr>
        <td>@ogr.OgrenciId</td>
        <td>@ogr.OgrenciAd</td>
        <td>@ogr.OgrenciSoyad</td>
        <td>
          <a
            asp-controller="Ogrenci"
            asp-action="Edit"
            asp-route-id="@ogr.OgrenciId"
            class="btn btn-sm btn-primary"
            >Edit</a>
          <a
            asp-controller="Ogrenci"
            asp-action="Delete"
            asp-route-id="@ogr.OgrenciId"
            class="btn btn-sm btn-danger"
            >Delete</a>
        </td>
      </tr>
      }
    </tbody>
  </table>
</Ogrenci>
